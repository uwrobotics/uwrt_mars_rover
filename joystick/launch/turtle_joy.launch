<launch>
	<!-- Turtlesim Node-->
<!--		<node pkg="turtlesim" type="turtlesim_node" name="sim"/>-->


	<!-- joy node -->
		<node respawn="true" pkg="joy"
			type="joy_node" name="turtle_joy">
			<param name="dev" type="string" value="/dev/input/js0"/>
			<param name="deadzone" value="0.25"/>
		</node>

	<!-- Axes TODO: load from max velocity in controller-->
		<param name="left_stick_vertical_scale_fast" value="2.2576" type="double"/>
		<param name="left_stick_vertical_scale_slow" value="1.128765711" type="double"/>
		<param name="left_stick_angular_scale_fast" value="5.925279" type="double"/>
		<param name="left_stick_angular_scale_slow" value="2.9626" type="double"/>

		<param name="right_stick_vertical_scale" value="1" type="int"/>
		<param name="right_stick_angular_scale" value="1" type="int"/>

		<node pkg="joystick" type="xbox_controller" name="xbox_teleop"/>
</launch>
