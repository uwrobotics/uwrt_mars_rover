<?xml version="1.0"?>
<package format="2">
  <name>uwrt_arm_hw</name>
  <version>0.0.0</version>
  <description>ROS Control Hardware Interfaces for Arm of UWRT Rover</description>

  <maintainer email="s2daga@uwaterloo.ca">Somesh Daga</maintainer>
  <license>MIT</license>
  <author email="s2daga@uwaterloo.ca">Somesh Daga</author>
  
  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>gazebo_dev</build_depend>

  <depend>angles</depend>
  <depend>controller_interface</depend>
  <depend>controller_manager</depend>
  <depend>forward_command_controller</depend>
  <depend>gazebo_ros_control</depend>
  <depend>gripper_action_controller</depend>
  <depend>hardware_interface</depend>
  <depend>joint_limits_interface</depend>
  <depend>pluginlib</depend>
  <depend>roscpp</depend>
  <depend>transmission_interface</depend>
  <depend>urdf</depend>

  <export>
    <controller_interface plugin="${prefix}/voltage_controllers_plugins.xml"/>
  </export>
</package>
